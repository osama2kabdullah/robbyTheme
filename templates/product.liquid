<h3>{{ product.title }}</h3>
<p>{{ product.price | money }}</p>
<div>
  <p>{{ product.description }}</p>
</div>
{% form 'product', product %}
  <select name="id">
    {% for variant in product.variants %}
      <option value={{variant.id}}>
        {{variant.title}}
      </option>
    {% endfor %}
  </select>
  <button type="submit">Add to Cart</button>
{% endform %}
